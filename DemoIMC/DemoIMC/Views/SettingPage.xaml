<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoIMC.Views.SettingPage" 
             xmlns:vm="clr-namespace:DemoIMC.ViewModels"
             NavigationPage.HasNavigationBar="False" 
             Title="Setting"
             Icon="Setting">
    <ContentPage.BindingContext>
        <vm:SettingViewModel/>
    </ContentPage.BindingContext>

  
    <StackLayout Padding="10,20,0,0">
        <Label Text="Respaldo de la base de datos" VerticalTextAlignment="Center"/>
        <Button Text="Exportar" 
                 VerticalOptions="Start"
                HorizontalOptions="Start"
                    BorderRadius="70" 
                    HeightRequest="40" 
                    BorderColor="#43a047" 
                    BackgroundColor="Transparent" 
                    BorderWidth="3"  
                    TextColor="Black"   
                Command="{Binding ExportarCommand}"/>

        <Button Text="importar" 
                VerticalOptions="Start"
                HorizontalOptions="Start"
                BorderRadius="70" 
                    HeightRequest="40" 
                    BorderColor="#43a047" 
                    BackgroundColor="Transparent" 
                    BorderWidth="3"  
                    TextColor="Black"   
                 Command="{Binding ImportarCommand}"/>


    </StackLayout>
   
</ContentPage>